---
import { markdownify } from "@/lib/utils/textConverter";

const { offers } = Astro.props;
const { title, offer_list } = offers;
---

<section class="section">
  <div class="container">
    <div class="row justify-between text-center lg:text-start">
      <div class="lg:col-12">
        <h2 set:html={markdownify(title)} />
      </div>
    </div>
    <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {offer_list.map((offer) => (
        <article class="rounded-2xl border border-border bg-background/60 p-6 shadow-sm transition-all hover:border-secondary/60 hover:shadow-lg">
          <h3 class="text-lg font-semibold">{offer.title}</h3>
          <p class="mt-3 text-text-secondary" set:html={markdownify(offer.content)} />
        </article>
      ))}
    </div>
  </div>
</section>
